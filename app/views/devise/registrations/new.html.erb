<%= render 'user/user_header' %>

<div class = "center">

  <h2>新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :"バンド名 or 名前(ニックネーム)" %><br />
       <div>--プロデューサーの方--</br>コメントやユーザ詳細で名前が表示されます。</div><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    
    <%= f.label :"ユーザータイプ" %><br />
     <div class="field">
      <%= f.radio_button :scene, "Band" %>
        <%= f.label :scene, 'Band' %></br>
      <%= f.radio_button :scene, "Producer" %>
        <%= f.label :scene, 'Producer' %></br>

    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード" %>
      <% if @minimum_password_length %>
      <em>(半角英数字<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード(確認)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

    <div class= "login">既に登録済みの方</div>
      <div><%= link_to "こちら   ", new_user_session_path %>からログインしてください。 </div>
</div>