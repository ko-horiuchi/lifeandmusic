<%= render 'admin/admin_header' %>

<div class= "center">

  <h1>アーティスト一覧</h1>

    <table>
      
      <tr>
        <th>アーティスト名</th>
        <th>ジャンル</th>
        <th>投稿数</th>
        <th></th>
        <th></th>
      </tr>
      <% @artists.each do |artist| %>
