<!DOCTYPE html>
<html>
  <head>
    <title>Lifeandmusic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class= "regular">
    <nav>
      <% if user_signed_in? %>
          <div>
            <ul>
              <li><%= link_to 'L & M', root_path %></li>
              <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
              <li><%= link_to '新着投稿一覧', musics_path %></li>
              <li><%= link_to 'アーティスト一覧', artists_path %></li>
              <li><%= link_to '新規おすすめ楽曲投稿', new_music_path %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
      <% else %>
          <div>
            <ul>
              <li><%= link_to 'L & M', root_path %></li>
              <li><%= link_to 'TOP', root_path %></li>
              <li><%= link_to 'About', home_about_path %></li>
              <li><%= link_to "新規登録", new_user_registration_path %></li>
              <li><%= link_to "ログイン", new_user_session_path %></li>
            </ul>
          </div>
      <% end %>
      </div>
    </nav>
  </header>




  <%= yield %>
</html>
